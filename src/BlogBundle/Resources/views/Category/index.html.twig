{% extends 'BlogBundle::layout.html.twig' %}

{% block content %}
	<div class="col-lg-6">
		<h2>Categorías</h2>
		<hr/>
		<a href="{{ path("blog_add_category") }}" class="btn btn-success"> Añadir categoría </a>
		<hr/>
		{% for message in app.session.flashbag().get('status') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<table class="table table-bordered">
			<tr>
				<th>Nombre</th>
				<th>Descripción</th>
				<th>Opciones</th>
			</tr>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td>{{ category.description }}</td>
					<td>
						<a href="{{ path("blog_edit_category", {"id": category.id}) }}" class="btn btn-info">Editar</a>
						<a href="{{ path("blog_delete_category", {"id": category.id}) }}" class="btn btn-danger">Eliminar</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
	<div class="clearfix"></div>
{% endblock %}